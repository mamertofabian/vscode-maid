{
  "name": "vscode-maid",
  "displayName": "MAID - Manifest-driven AI Development",
  "description": "VS Code extension for MAID (Manifest-driven AI Development) with LSP integration, manifest exploration, test execution, and validation features",
  "version": "0.1.3",
  "publisher": "aidrivencoder",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "maid",
    "manifest",
    "validation",
    "lsp",
    "language-server",
    "json",
    "test",
    "ide"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mamertofabian/vscode-maid.git"
  },
  "bugs": {
    "url": "https://github.com/mamertofabian/vscode-maid/issues"
  },
  "homepage": "https://github.com/mamertofabian/vscode-maid#readme",
  "license": "MIT",
  "contributes": {
    "languages": [
      {
        "id": "json",
        "filenames": [
          "*.manifest.json"
        ]
      }
    ],
    "commands": [
      {
        "command": "vscode-maid.checkInstallation",
        "title": "Check MAID LSP Installation",
        "category": "MAID"
      },
      {
        "command": "vscode-maid.checkForUpdates",
        "title": "Check for MAID LSP Updates",
        "category": "MAID"
      }
    ],
    "configuration": {
      "title": "MAID",
      "properties": {
        "maid-lsp.path": {
          "type": "string",
          "default": "maid-lsp",
          "description": "Path to the maid-lsp executable. Use 'maid-lsp' if it's in your PATH."
        },
        "maid-lsp.args": {
          "type": "array",
          "default": [
            "--stdio"
          ],
          "description": "Arguments to pass to maid-lsp"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "node esbuild.js --watch",
    "package": "npm run check-types && node esbuild.js --production"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.0.0",
    "vscode-languageclient": "^9.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  }
}
