{
  "name": "vscode-maid",
  "displayName": "MAID - Manifest-driven AI Development",
  "description": "VS Code extension for MAID (Manifest-driven AI Development) with LSP integration, manifest exploration, test execution, and validation features",
  "version": "0.2.0",
  "publisher": "aidrivencoder",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "maid",
    "manifest",
    "validation",
    "lsp",
    "language-server",
    "json",
    "test",
    "ide"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onView:maidManifests"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mamertofabian/vscode-maid.git"
  },
  "bugs": {
    "url": "https://github.com/mamertofabian/vscode-maid/issues"
  },
  "homepage": "https://github.com/mamertofabian/vscode-maid#readme",
  "license": "MIT",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "maid-explorer",
          "title": "MAID",
          "icon": "resources/maid-icon.svg"
        }
      ]
    },
    "views": {
      "maid-explorer": [
        {
          "id": "maidManifests",
          "name": "Manifests"
        },
        {
          "id": "maidTrackedFiles",
          "name": "Tracked Files"
        },
        {
          "id": "maidKnowledgeGraph",
          "name": "Knowledge Graph"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "maidManifests",
        "contents": "No manifest files found in workspace.\n[Create Manifest](command:vscode-maid.createManifest)\n[Learn about MAID](https://github.com/mamertofabian/maid-runner)"
      }
    ],
    "languages": [
      {
        "id": "json",
        "filenames": [
          "*.manifest.json"
        ]
      }
    ],
    "commands": [
      {
        "command": "vscode-maid.checkInstallation",
        "title": "Check MAID LSP Installation",
        "category": "MAID"
      },
      {
        "command": "vscode-maid.checkForUpdates",
        "title": "Check for MAID LSP Updates",
        "category": "MAID"
      },
      {
        "command": "vscode-maid.showLogs",
        "title": "Show Logs",
        "category": "MAID"
      },
      {
        "command": "vscode-maid.refreshManifests",
        "title": "Refresh Manifests",
        "category": "MAID",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-maid.runTests",
        "title": "Run Tests",
        "category": "MAID",
        "icon": "$(play)"
      },
      {
        "command": "vscode-maid.runTestsWatch",
        "title": "Run Tests (Watch Mode)",
        "category": "MAID",
        "icon": "$(eye)"
      },
      {
        "command": "vscode-maid.runTestsForManifest",
        "title": "Run Tests for This Manifest",
        "category": "MAID",
        "icon": "$(play)"
      },
      {
        "command": "vscode-maid.validateManifest",
        "title": "Validate Manifest",
        "category": "MAID",
        "icon": "$(check)"
      },
      {
        "command": "vscode-maid.refreshTrackedFiles",
        "title": "Refresh Tracked Files",
        "category": "MAID",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-maid.refreshKnowledgeGraph",
        "title": "Refresh Knowledge Graph",
        "category": "MAID",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vscode-maid.refreshManifests",
          "when": "view == maidManifests",
          "group": "navigation"
        },
        {
          "command": "vscode-maid.runTests",
          "when": "view == maidManifests",
          "group": "navigation"
        },
        {
          "command": "vscode-maid.refreshTrackedFiles",
          "when": "view == maidTrackedFiles",
          "group": "navigation"
        },
        {
          "command": "vscode-maid.refreshKnowledgeGraph",
          "when": "view == maidKnowledgeGraph",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-maid.runTestsForManifest",
          "when": "view == maidManifests && viewItem == maidManifest",
          "group": "inline"
        },
        {
          "command": "vscode-maid.validateManifest",
          "when": "view == maidManifests && viewItem == maidManifest",
          "group": "maid@1"
        },
        {
          "command": "vscode-maid.runTestsForManifest",
          "when": "view == maidManifests && viewItem == maidManifest",
          "group": "maid@2"
        }
      ],
      "explorer/context": [
        {
          "command": "vscode-maid.runTestsForManifest",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@1"
        },
        {
          "command": "vscode-maid.validateManifest",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@2"
        }
      ],
      "editor/context": [
        {
          "command": "vscode-maid.runTestsForManifest",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@1"
        },
        {
          "command": "vscode-maid.validateManifest",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@2"
        }
      ],
      "commandPalette": [
        {
          "command": "vscode-maid.runTestsForManifest",
          "when": "resourceFilename =~ /\\.manifest\\.json$/"
        },
        {
          "command": "vscode-maid.validateManifest",
          "when": "resourceFilename =~ /\\.manifest\\.json$/"
        }
      ]
    },
    "configuration": {
      "title": "MAID",
      "properties": {
        "maid-lsp.path": {
          "type": "string",
          "default": "maid-lsp",
          "description": "Path to the maid-lsp executable. Use 'maid-lsp' if it's in your PATH."
        },
        "maid-lsp.args": {
          "type": "array",
          "default": [
            "--stdio"
          ],
          "description": "Arguments to pass to maid-lsp"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "node esbuild.js --watch",
    "package": "npm run check-types && node esbuild.js --production"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.0.0",
    "vscode-languageclient": "^9.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  }
}
