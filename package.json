{
  "name": "vscode-maid",
  "displayName": "MAID - Manifest-driven AI Development",
  "description": "VS Code extension for MAID (Manifest-driven AI Development) with LSP integration, manifest exploration, test execution, and validation features",
  "version": "0.4.2",
  "publisher": "aidrivencoder",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "maid",
    "manifest",
    "validation",
    "lsp",
    "language-server",
    "json",
    "test",
    "ide"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mamertofabian/vscode-maid.git"
  },
  "bugs": {
    "url": "https://github.com/mamertofabian/vscode-maid/issues"
  },
  "homepage": "https://github.com/mamertofabian/vscode-maid#readme",
  "license": "MIT",
  "icon": "images/logo-128.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "maid-explorer",
          "title": "MAID",
          "icon": "resources/maid-icon.svg"
        }
      ]
    },
    "views": {
      "maid-explorer": [
        {
          "id": "maidManifests",
          "name": "Manifests"
        },
        {
          "id": "maidTrackedFiles",
          "name": "Tracked Files"
        },
        {
          "id": "maidKnowledgeGraph",
          "name": "Knowledge Graph"
        },
        {
          "id": "maidManifestHistory",
          "name": "History"
        },
        {
          "id": "maidFileManifests",
          "name": "File Manifests"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "maidManifests",
        "contents": "No manifest files found in workspace.\n[Create Manifest](command:vscode-maid.createManifest)\n[Learn about MAID](https://github.com/mamertofabian/maid-runner)"
      }
    ],
    "languages": [
      {
        "id": "json",
        "filenames": [
          "*.manifest.json"
        ]
      }
    ],
    "commands": [
      {
        "command": "vscode-maid.checkInstallation",
        "title": "Check MAID LSP Installation",
        "category": "MAID"
      },
      {
        "command": "vscode-maid.checkForUpdates",
        "title": "Check for MAID LSP Updates",
        "category": "MAID"
      },
      {
        "command": "vscode-maid.showLogs",
        "title": "Show Logs",
        "category": "MAID"
      },
      {
        "command": "vscode-maid.refreshManifests",
        "title": "Refresh Manifests",
        "category": "MAID",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-maid.runTests",
        "title": "Run Tests",
        "category": "MAID",
        "icon": "$(play)"
      },
      {
        "command": "vscode-maid.runTestsWatch",
        "title": "Run Tests (Watch Mode)",
        "category": "MAID",
        "icon": "$(eye)"
      },
      {
        "command": "vscode-maid.runTestsForManifest",
        "title": "Run Tests for This Manifest",
        "category": "MAID",
        "icon": "$(play)"
      },
      {
        "command": "vscode-maid.validateManifest",
        "title": "Validate Manifest",
        "category": "MAID",
        "icon": "$(check)"
      },
      {
        "command": "vscode-maid.refreshTrackedFiles",
        "title": "Refresh Tracked Files",
        "category": "MAID",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-maid.refreshKnowledgeGraph",
        "title": "Refresh Knowledge Graph",
        "category": "MAID",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-maid.goToParentManifest",
        "title": "Go to Parent Manifest",
        "category": "MAID",
        "icon": "$(arrow-up)"
      },
      {
        "command": "vscode-maid.goToChildManifests",
        "title": "Go to Child Manifests",
        "category": "MAID",
        "icon": "$(arrow-down)"
      },
      {
        "command": "vscode-maid.showKnowledgeGraphVisualizer",
        "title": "Show Knowledge Graph Visualizer",
        "category": "MAID",
        "icon": "$(type-hierarchy)"
      },
      {
        "command": "vscode-maid.showDashboard",
        "title": "Show Project Dashboard",
        "category": "MAID",
        "icon": "$(dashboard)"
      },
      {
        "command": "vscode-maid.refreshManifestHistory",
        "title": "Refresh History",
        "category": "MAID",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-maid.refreshFileManifests",
        "title": "Refresh File Manifests",
        "category": "MAID",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-maid.showManifestHistory",
        "title": "Show Manifest History",
        "category": "MAID",
        "icon": "$(history)"
      },
      {
        "command": "vscode-maid.compareManifestVersions",
        "title": "Compare Manifest Versions",
        "category": "MAID",
        "icon": "$(diff)"
      },
      {
        "command": "vscode-maid.openManifestAtCommit",
        "title": "Open Manifest at Commit",
        "category": "MAID",
        "icon": "$(git-commit)"
      },
      {
        "command": "vscode-maid.showManifestChain",
        "title": "Show Manifest Chain",
        "category": "MAID",
        "icon": "$(git-branch)"
      },
      {
        "command": "vscode-maid.findManifestsForFile",
        "title": "Find Manifests for File",
        "category": "MAID",
        "icon": "$(search)"
      },
      {
        "command": "vscode-maid.validateCoherence",
        "title": "Validate Coherence",
        "category": "MAID",
        "icon": "$(check-all)"
      },
      {
        "command": "vscode-maid.validateManifestChain",
        "title": "Validate Manifest Chain",
        "category": "MAID",
        "icon": "$(git-branch)"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-maid.goToParentManifest",
        "key": "alt+up",
        "when": "resourceFilename =~ /\\.manifest\\.json$/"
      },
      {
        "command": "vscode-maid.goToChildManifests",
        "key": "alt+down",
        "when": "resourceFilename =~ /\\.manifest\\.json$/"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vscode-maid.refreshManifests",
          "when": "view == maidManifests",
          "group": "navigation"
        },
        {
          "command": "vscode-maid.runTests",
          "when": "view == maidManifests",
          "group": "navigation"
        },
        {
          "command": "vscode-maid.refreshTrackedFiles",
          "when": "view == maidTrackedFiles",
          "group": "navigation"
        },
        {
          "command": "vscode-maid.refreshKnowledgeGraph",
          "when": "view == maidKnowledgeGraph",
          "group": "navigation"
        },
        {
          "command": "vscode-maid.showKnowledgeGraphVisualizer",
          "when": "view == maidKnowledgeGraph",
          "group": "navigation"
        },
        {
          "command": "vscode-maid.showDashboard",
          "when": "view == maidManifests",
          "group": "navigation"
        },
        {
          "command": "vscode-maid.refreshManifestHistory",
          "when": "view == maidManifestHistory",
          "group": "navigation"
        },
        {
          "command": "vscode-maid.showManifestHistory",
          "when": "view == maidManifestHistory",
          "group": "navigation"
        },
        {
          "command": "vscode-maid.refreshFileManifests",
          "when": "view == maidFileManifests",
          "group": "navigation"
        },
        {
          "command": "vscode-maid.showManifestChain",
          "when": "view == maidManifests",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-maid.runTestsForManifest",
          "when": "view == maidManifests && viewItem == maidManifest",
          "group": "inline"
        },
        {
          "command": "vscode-maid.validateManifest",
          "when": "view == maidManifests && viewItem == maidManifest",
          "group": "maid@1"
        },
        {
          "command": "vscode-maid.runTestsForManifest",
          "when": "view == maidManifests && viewItem == maidManifest",
          "group": "maid@2"
        },
        {
          "command": "vscode-maid.showManifestChain",
          "when": "view == maidManifests && viewItem == maidManifest",
          "group": "maid@3"
        },
        {
          "command": "vscode-maid.validateCoherence",
          "when": "view == maidManifests && viewItem == maidManifest",
          "group": "maid@4"
        },
        {
          "command": "vscode-maid.validateManifestChain",
          "when": "view == maidManifests && viewItem == maidManifest",
          "group": "maid@5"
        },
        {
          "command": "vscode-maid.showManifestHistory",
          "when": "view == maidManifestHistory && viewItem == maidHistoryCommit",
          "group": "inline"
        },
        {
          "command": "vscode-maid.openManifestAtCommit",
          "when": "view == maidManifestHistory && viewItem == maidHistoryCommit",
          "group": "maid@1"
        },
        {
          "command": "vscode-maid.compareManifestVersions",
          "when": "view == maidManifestHistory && viewItem == maidHistoryCommit",
          "group": "maid@2"
        }
      ],
      "explorer/context": [
        {
          "command": "vscode-maid.runTestsForManifest",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@1"
        },
        {
          "command": "vscode-maid.validateManifest",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@2"
        },
        {
          "command": "vscode-maid.showManifestHistory",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@3"
        },
        {
          "command": "vscode-maid.showManifestChain",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@4"
        },
        {
          "command": "vscode-maid.validateCoherence",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@5"
        },
        {
          "command": "vscode-maid.validateManifestChain",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@6"
        }
      ],
      "editor/context": [
        {
          "command": "vscode-maid.runTestsForManifest",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@1"
        },
        {
          "command": "vscode-maid.validateManifest",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@2"
        },
        {
          "command": "vscode-maid.showManifestHistory",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@3"
        },
        {
          "command": "vscode-maid.showManifestChain",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@4"
        },
        {
          "command": "vscode-maid.validateCoherence",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@5"
        },
        {
          "command": "vscode-maid.validateManifestChain",
          "when": "resourceFilename =~ /\\.manifest\\.json$/",
          "group": "maid@6"
        },
        {
          "command": "vscode-maid.findManifestsForFile"
        }
      ],
      "commandPalette": [
        {
          "command": "vscode-maid.runTestsForManifest",
          "when": "resourceFilename =~ /\\.manifest\\.json$/"
        },
        {
          "command": "vscode-maid.validateManifest",
          "when": "resourceFilename =~ /\\.manifest\\.json$/"
        },
        {
          "command": "vscode-maid.goToParentManifest",
          "when": "resourceFilename =~ /\\.manifest\\.json$/"
        },
        {
          "command": "vscode-maid.goToChildManifests",
          "when": "resourceFilename =~ /\\.manifest\\.json$/"
        },
        {
          "command": "vscode-maid.showManifestHistory",
          "when": "resourceFilename =~ /\\.manifest\\.json$/"
        },
        {
          "command": "vscode-maid.showManifestChain",
          "when": "resourceFilename =~ /\\.manifest\\.json$/"
        },
        {
          "command": "vscode-maid.findManifestsForFile"
        }
      ]
    },
    "configuration": {
      "title": "MAID",
      "properties": {
        "maid-lsp.path": {
          "type": "string",
          "default": "maid-lsp",
          "description": "Path to the maid-lsp executable. Use 'maid-lsp' if it's in your PATH."
        },
        "maid-lsp.args": {
          "type": "array",
          "default": [
            "--stdio"
          ],
          "description": "Arguments to pass to maid-lsp"
        },
        "maid.history.maxCommits": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of commits to load initially in the history view"
        },
        "maid.history.enableAutoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh history when manifest changes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "node esbuild.js --watch",
    "package": "npm run check-types && node esbuild.js --production",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/ui": "^4.0.17",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17",
    "vscode-languageclient": "^9.0.0"
  },
  "dependencies": {
    "jsonc-parser": "^3.2.0",
    "vscode-languageclient": "^9.0.0"
  }
}
