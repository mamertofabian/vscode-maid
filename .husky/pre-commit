npx lint-staged

# Stage any files that were modified by lint-staged (formatting, linting fixes)
git add -u

# Run MAID validation if maid command is available
if command -v maid >/dev/null 2>&1; then
  echo "Running maid validate..."
  maid validate || exit 1
  
  echo "Running maid test..."
  maid test || exit 1
else
  echo "Warning: maid command not found. Skipping MAID validation."
  echo "Install maid-runner with: pipx install maid-runner"
fi
